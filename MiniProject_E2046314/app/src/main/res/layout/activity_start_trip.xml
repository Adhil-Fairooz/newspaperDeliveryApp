<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:paddingLeft="2dp"
    android:paddingTop="16dp"

    android:paddingBottom="16dp"
    tools:context=".StartTripActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <fragment
            android:id="@+id/mapFragment"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="500dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/titleshape"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="#ffff"
                android:textSize="22dp"
                android:text="Delivery Infromation"
                android:gravity="center"/>
        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <TableRow
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="153dp"
                    android:padding="8dp"
                    android:background="#e8e7ff"
                    android:text="Subscriber Name"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSubscriberName"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:padding="8dp" />
            </TableRow>

            <TableRow
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="140dp"
                    android:padding="8dp"
                    android:background="#e8e7ff"
                    android:text="Address"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvaddress"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:padding="8dp" />
            </TableRow>

            <TableRow
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="140dp"
                    android:padding="8dp"
                    android:background="#e8e7ff"
                    android:text="Plan ID"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvPlanID"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:padding="8dp" />
            </TableRow>

            <TableRow
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="140dp"
                    android:padding="8dp"
                    android:text="Type"
                    android:background="#e8e7ff"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvType"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:padding="8dp" />
            </TableRow>

            <TableRow
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="140dp"
                    android:padding="8dp"
                    android:text="Newspapers"
                    android:background="#e8e7ff"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvNewspapers"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:padding="8dp" />
            </TableRow>

            <TableRow
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="140dp"
                    android:padding="8dp"
                    android:background="#e8e7ff"
                    android:text="Plan Expire Date"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvExpireDate"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:padding="8dp" />
            </TableRow>

            <TableRow
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="140dp"
                    android:padding="8dp"
                    android:text="Renewal Status"
                    android:background="#e8e7ff"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etRenwalSatus"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:ems="12"
                    android:inputType="textPersonName" />

            </TableRow>
            <TableRow
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="140dp"
                    android:padding="8dp"
                    android:text="Delivery Status"
                    android:background="#e8e7ff"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal">


                    <RadioButton
                        android:id="@+id/radioDelivered"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:text="Delivered" />
                    <RadioButton
                        android:id="@+id/radioNotDelivered"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Not Delivered" />
                </RadioGroup>


            </TableRow>
            <TableRow
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="140dp"
                    android:padding="8dp"
                    android:background="#e8e7ff"
                    android:text="Delivery Notes"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etNote"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:ems="12"
                    android:inputType="textPersonName" />
            </TableRow>
        </TableLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="50dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Update Info"
                android:background="@drawable/button_shape"
                app:backgroundTint="#e988fe"
                android:textStyle="bold"
                android:onClick="updateInfo"
                android:layout_marginRight="10dp"
                tools:ignore="OnClick" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Next"
                android:backgroundTint="#686de0"
                android:onClick="nextsub"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

    </LinearLayout>


</ScrollView>