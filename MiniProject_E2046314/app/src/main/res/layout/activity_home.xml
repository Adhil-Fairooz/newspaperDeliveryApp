<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".Home"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/titleshape"
            android:textColor="#fff"
            android:text="Distributor Home Page"
            android:textStyle="bold"
            android:textSize="21dp"
            android:gravity="center"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/btnlogout"

            app:backgroundTint="@android:color/holo_red_light"
            android:layout_width="wrap_content"
            android:layout_height="50dp"

            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:text="Logout"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome, "
            android:textStyle="italic|bold"
            android:textSize="22dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:id="@+id/tvUserNameDisplay"
            android:textStyle="italic"
            android:textSize="22dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="50dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/buttonFetchData"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"


            app:srcCompat="@drawable/sync"
             />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Download Sync DB"
            android:textSize="25dp"
            android:textColor="@android:color/holo_purple"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"

            android:gravity="left"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
         >

        <ImageButton
            android:id="@+id/imgbtnStartTrip"
            android:onClick="displayTrip"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/route"
            />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Start Trip"
            android:textSize="25dp"
            android:textColor="@android:color/holo_purple"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"

            android:gravity="left"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton2"
            android:onClick="DeliveryHistory"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/history" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Delivery History"
            android:textSize="25dp"
            android:textColor="@android:color/holo_purple"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"

            android:gravity="left"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton3"
            android:onClick="endTrip"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/destination"
            tools:ignore="OnClick" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="End Trip"
            android:textSize="25dp"
            android:textColor="@android:color/holo_purple"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"

            android:gravity="left"
            android:layout_gravity="center"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal">

            <ImageButton
                android:onClick="changepassword"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/password"
                tools:ignore="OnClick" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Change Password"
                android:textSize="25dp"
                android:textColor="@android:color/holo_purple"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"

                android:gravity="left"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/displayRec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button"
        android:visibility="invisible"/>

</LinearLayout>